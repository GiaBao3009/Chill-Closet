@model IEnumerable<Voucher>

@{
    ViewData["Title"] = "Ví Voucher";
}

<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Ví Voucher</h4>
                    <div class="breadcrumb__links">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                        <span>Ví Voucher</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="shopping-cart spad">
    <div class="container">
        <h4 class="mb-4">Các mã giảm giá của bạn</h4>
        @if (Model.Any())
        {
            <div class="row">
                @foreach (var voucher in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card mb-4" style="border: 2px dashed #e53637;">
                            <div class="card-body">
                                <h5 class="card-title font-weight-bold">@voucher.Code</h5>
                                <p class="card-text">
                                    @if (voucher.Type == Chill_Closet.Enums.VoucherType.Percentage)
                                    {
                                        <span>Giảm @voucher.DiscountValue%</span>
                                    }
                                    else
                                    {
                                        <span>Giảm @voucher.DiscountValue.ToString("N0") VNĐ</span>
                                    }
                                </p>
                                <p class="card-text"><small class="text-muted">Hạn sử dụng: @voucher.ExpiryDate.ToString("dd/MM/yyyy")</small></p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>Bạn chưa có mã giảm giá nào.</p>
        }
    </div>
</section>