@model Voucher

@{
    ViewData["Title"] = "Chỉnh sửa Voucher";
}

<div class="admin-dashboard spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                @await Html.PartialAsync("_AdminSidebarPartial")
            </div>
            <div class="col-lg-9">
                <div class="admin-content">
                    <div class="admin-content-title">
                        <h2>Chỉnh sửa Voucher: @Model.Code</h2>
                    </div>

                    <div class="admin-form-container">
                        <form asp-action="EditVoucher">
                            <input type="hidden" asp-for="Id" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="Code" class="control-label">Mã Voucher</label>
                                <input asp-for="Code" class="form-control" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Type" class="control-label">Loại Voucher</label>
                                <select asp-for="Type" asp-items="Html.GetEnumSelectList<Chill_Closet.Enums.VoucherType>()" class="form-control"></select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="DiscountValue" class="control-label">Giá trị giảm</label>
                                <input asp-for="DiscountValue" class="form-control" />
                                <small class="form-text text-muted">Nếu loại là Percentage, nhập số (ví dụ: 10 cho 10%). Nếu là FixedAmount, nhập số tiền (ví dụ: 50000 cho 50k).</small>
                                <span asp-validation-for="DiscountValue" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Quantity" class="control-label">Số lượng</label>
                                <input asp-for="Quantity" class="form-control" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ExpiryDate" class="control-label">Ngày hết hạn</label>
                                <input asp-for="ExpiryDate" class="form-control" type="date" />
                                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                            </div>

                            <div class="form-buttons mt-4">
                                <input type="submit" value="Lưu thay đổi" class="site-btn" />
                                <a asp-action="Vouchers" class="btn btn-outline-secondary ml-2">Quay lại</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>