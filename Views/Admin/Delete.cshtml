@model Chill_Closet.Models.Product

@{
    ViewData["Title"] = "Xác nhận xóa sản phẩm";
}

<div class="admin-dashboard spad">
    <div class="container">
        <div class="admin-content">
            <div class="admin-content-title">
                <h2>Xác nhận xóa</h2>
                <h3 class="text-danger">Bạn có chắc chắn muốn xóa sản phẩm này không?</h3>
            </div>

            <div class="admin-form-container">
                <h4>Sản phẩm: @Model.Name</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">Tên</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-2">Giá</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>

                    <dt class="col-sm-2">Danh mục</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Category.Name)</dd>

                    <dt class="col-sm-2">Ảnh</dt>
                    <dd class="col-sm-10">
                        <img src="@Url.Content(Model.MainImageUrl)" width="100" />
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-buttons mt-4">
                        <input type="submit" value="Xóa" class="btn btn-danger" />
                        <a asp-action="Products" class="btn btn-outline-secondary ml-2">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>