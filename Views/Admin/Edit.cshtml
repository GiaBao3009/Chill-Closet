@model Chill_Closet.Models.Product

@{
    ViewData["Title"] = "Chỉnh sửa Sản phẩm";
}

<div class="admin-dashboard spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                @await Html.PartialAsync("_AdminSidebarPartial")
            </div>
            <div class="col-lg-9">
                <div class="admin-content">
                    <div class="admin-content-title">
                        <h2>Chỉnh sửa Sản phẩm</h2>
                    </div>

                    <div class="admin-form-container">
                        <form asp-action="Edit" method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id" />
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-group">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Price" class="form-label"></label>
                                        <input asp-for="Price" class="form-control" />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="CategoryId" class="form-label"></label>
                                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
                                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description" class="form-label"></label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label">Ảnh đại diện hiện tại</label><br />
                                <img src="@Url.Content(Model.MainImageUrl)" width="100" class="mb-2" />
                                <input type="file" name="mainImageFile" class="form-control" />
                                <small class="form-text text-muted">Chọn file mới nếu bạn muốn thay đổi ảnh đại diện.</small>
                            </div>

                            <div class="form-group">
                                <label class="form-label">Thêm ảnh phụ</label>
                                <input type="file" name="imageFiles" class="form-control" multiple />
                            </div>

                            <div class="form-buttons mt-4">
                                <button type="submit" class="site-btn">Lưu thay đổi</button>
                                <a asp-action="Products" class="btn btn-outline-secondary ml-2">Quay lại</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}