@model Voucher
@using Chill_Closet.Enums

@{
    ViewData["Title"] = "Tạo Voucher mới";
}

<div class="admin-dashboard spad">
    <div class="container">
        <div class="admin-content">
            <div class="admin-content-title"><h2>Tạo Voucher mới</h2></div>
            <div class="admin-form-container">
                <form asp-action="CreateVoucher">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Code" class="control-label">Mã Voucher</label>
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Type" class="control-label">Loại Voucher</label>
                        <select asp-for="Type" asp-items="Html.GetEnumSelectList<VoucherType>()" class="form-control"></select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DiscountValue" class="control-label">Giá trị giảm</label>
                        <input asp-for="DiscountValue" class="form-control" />
                        <small class="form-text text-muted">Nếu loại là Percentage, nhập số (ví dụ: 10 cho 10%). Nếu là FixedAmount, nhập số tiền (ví dụ: 50000 cho 50k).</small>
                        <span asp-validation-for="DiscountValue" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label">Số lượng</label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExpiryDate" class="control-label">Ngày hết hạn</label>
                        <input asp-for="ExpiryDate" class="form-control" type="date" />
                        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                    </div>
                    <div class="form-buttons mt-4">
                        <input type="submit" value="Tạo mới" class="site-btn" />
                        <a asp-action="Vouchers" class="btn btn-outline-secondary ml-2">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>