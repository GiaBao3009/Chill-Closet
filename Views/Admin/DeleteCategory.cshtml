@model Chill_Closet.Models.Category

@{
    ViewData["Title"] = "Xác nhận xóa";
}

<div class="admin-dashboard spad">
    <div class="container">
        <div class="admin-content">
            <div class="admin-content-title">
                <h2>Xác nhận xóa</h2>
                <h3 class="text-danger">Bạn có chắc chắn muốn xóa danh mục này không?</h3>
            </div>
            <div class="admin-form-container">
                <h4>Danh mục: @Model.Name</h4>
                <hr />
                <form asp-action="DeleteCategory">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-buttons mt-4">
                        <input type="submit" value="Xóa" class="btn btn-danger" />
                        <a asp-action="Categories" class="btn btn-outline-secondary ml-2">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>