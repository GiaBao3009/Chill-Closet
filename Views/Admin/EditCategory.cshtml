@model Chill_Closet.Models.Category

@{
    ViewData["Title"] = "Chỉnh sửa Danh mục";
}

<div class="admin-dashboard spad">
    <div class="container">
        <div class="admin-content">
            <div class="admin-content-title">
                <h2>Chỉnh sửa: @Model.Name</h2>
            </div>
            <div class="admin-form-container">
                <form asp-action="EditCategory">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-buttons mt-4">
                        <input type="submit" value="Lưu" class="site-btn" />
                        <a asp-action="Categories" class="btn btn-outline-secondary ml-2">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>