@model IEnumerable<Voucher>

@{
    ViewData["Title"] = "Quản lý Voucher";
}

<div class="admin-dashboard spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                @await Html.PartialAsync("_AdminSidebarPartial")
            </div>
            <div class="col-lg-9">
                <div class="admin-content">
                    <div class="admin-content-title">
                        <h2>Quản lý Voucher</h2>
                        <a asp-action="CreateVoucher" class="btn btn-dark">Thêm Voucher mới</a>
                    </div>

                    <table class="table table-bordered table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th>Mã Code</th>
                                <th>Loại</th>
                                <th>Giá trị giảm</th>
                                <th>Số lượng còn lại</th>
                                <th>Ngày hết hạn</th>
                                <th style="width: 150px;">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Code</td>
                                    <td>@item.Type</td>
                                    <td>@item.DiscountValue</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.ExpiryDate.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="EditVoucher" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success">Sửa</a>
                                            <a asp-action="DeleteVoucher" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Xóa</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>